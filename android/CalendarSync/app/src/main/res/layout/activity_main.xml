<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="husc.se.dcopen.calendarsync.MainActivity">

    <FrameLayout
        android:id="@+id/fragment_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    </FrameLayout>

    <LinearLayout
        android:id="@+id/nav_menu"
        android:layout_gravity="start"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="?android:dividerVertical"
            android:showDividers="end">
            <Button
                android:id="@+id/btn_home"
                android:padding="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_home_blue"
                android:drawablePadding="30dp"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:text="@string/home"
                android:gravity="center_vertical"
                android:background="@drawable/button_transparent"
                android:onClick="btnHomeOnClick"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="?android:dividerVertical"
            android:showDividers="end">
            <Button
                android:id="@+id/btn_sync_up"
                android:padding="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_upload_black"
                android:text="@string/sync_up"
                android:textAllCaps="false"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:drawablePadding="30dp"
                android:background="@drawable/button_transparent"
                android:onClick="btnSyncUpOnClick"/>
            <Button
                android:id="@+id/btn_sync_down"
                android:padding="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_download_black"
                android:text="@string/sync_down"
                android:textAllCaps="false"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:drawablePadding="30dp"
                android:background="@drawable/button_transparent"
                android:onClick="btnSyncDownOnClick"/>
            <Button
                android:id="@+id/btn_sync_history"
                android:padding="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_history"
                android:text="@string/sync_history"
                android:textAllCaps="false"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:drawablePadding="30dp"
                android:background="@drawable/button_transparent"
                android:onClick="btnSyncHistoryOnClick"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="?android:dividerVertical"
            android:showDividers="end">
            <Button
                android:id="@+id/btn_show_calendar"
                android:padding="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_calendar"
                android:text="@string/calendar"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:drawablePadding="30dp"
                android:background="@drawable/button_transparent"
                android:onClick="btnShowCalendarOnClick"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="?android:dividerVertical"
            android:showDividers="end">
            <Button
                android:id="@+id/btn_setting"
                android:padding="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_setting"
                android:text="@string/settings"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:drawablePadding="30dp"
                android:background="@drawable/button_transparent"
                android:onClick="btnSettingOnClick"/>
            <Button
                android:id="@+id/btn_about"
                android:padding="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_about"
                android:text="@string/about"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:gravity="center_vertical"
                android:drawablePadding="30dp"
                android:background="@drawable/button_transparent"
                android:onClick="btnAboutOnClick"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
            <Button
                android:id="@+id/btn_logout"
                android:layout_gravity="bottom"
                android:padding="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_sign_out"
                android:text="@string/logout"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:drawablePadding="30dp"
                android:background="@drawable/button_transparent"
                android:onClick="btnLogoutOnClick"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
